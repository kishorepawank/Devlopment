pipeline {
    agent any 
    stages {
        stage('Build') { 
            steps {
                echo "this is Build"
            }
        }
        stage('Test') { 
            steps {
                echo "this is Test"
            }
        }
        stage('Deploy') { 
            steps {
                input {
                    message 'Do you want to deploy, please approve'
                    ok 'APProve'
                    parameters {
                        booleanParam defaultValue: false, description: '', name: 'approved'
                    }
                }

               echo "this is Deploy"
            }
        }
    }
}