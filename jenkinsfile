pipeline {
    agent any
parameters {
  string defaultValue: 'Dev', description: 'my env', name: 'Env', trim: false
  booleanParam defaultValue: true, description: '', name: 'do you want to contiue'
  choice choices: ['dev', 'stage', 'prod'], description: 'number of stages', name: 'enter env'
}
options {
  timestamps ()
  ansiColor('xterm')
}
    stages {
        stage('Build') { 
                    input {
                message "Should we continue?"
                ok "Yes, we should."
                submitter "alice,bob"
                parameters {
                    string(name: 'PERSON', defaultValue: 'Mr Jenkins', description: 'Who should I say hello to?')
                }
            steps {
                echo "this is Build"
                echo "${Env}"
            }
        }
        stage('Test') { 
            steps {
                echo "this is Test"
            }
        }
        stage('Deploy') { 
            steps {
               echo "this is Deploy"
            }
        }
    }
}
